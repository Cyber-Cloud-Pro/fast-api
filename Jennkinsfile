pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'cyberxcloudxpro/fast-api:latest'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git credentialsId: 'github-token', url: 'https://github.com/Cyber-Cloud-Pro/fast-api.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                    sh 'docker push $DOCKER_IMAGE'
                }
            }
        }

        stage('Deploy on Minikube') {
            steps {
                sh '''
                kubectl delete pod fast-api --ignore-not-found=true
                kubectl run fast-api --image=$DOCKER_IMAGE --port=8000
                kubectl expose pod fast-api --type=NodePort --port=8000
                '''
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    def appUrl = sh(script: "minikube service fast-api --url", returnStdout: true).trim()
                    echo "âœ… FastAPI is deployed! Access it at: ${appUrl}"
                }
            }
        }
    }
}
